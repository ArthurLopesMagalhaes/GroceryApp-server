generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Addresses {
  id       Int    @id @default(autoincrement())
  id_user  Int?
  id_store Int?
  address  String @db.VarChar
  stores   Stores? @relation(fields: [id_store], references: [id])
  user     Users?  @relation(fields: [id_user], references: [id])
}

model Orders {
  id         Int       @id @default(autoincrement())
  id_user    Int
  id_store   Int
  id_product Int       @unique
  stores     Stores    @relation(fields: [id_store], references: [id])
  user       Users     @relation(fields: [id_user], references: [id])
  products   Products[]
}

model Products {
  id            Int    @id @default(autoincrement())
  id_store      Int  
  name          String @db.VarChar
  price         Float  @db.Real
  product_photo String @db.VarChar
  description   String @db.VarChar
  rating        Float  @db.Real
  orders        Orders? @relation(fields: [id], references: [id], map: "products_orders_fk")
  stores        Stores @relation(fields: [id_store], references: [id], map: "products_stores_fk")
}

model Stores {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar
  description  String         @db.VarChar
  rating       Float          @db.Real
  store_photo  String         @db.VarChar
  addresses    Addresses[]
  orders       Orders[]
  products     Products[]
  testimonials Testimonials[]
}

model Testimonials {
  id            Int    @id @default(autoincrement())
  id_user       Int
  id_store      Int
  rating        Float  @db.Real
  comment       String @db.VarChar
  date          DateTime       @db.Date
  stores        Stores @relation(fields: [id_store], references: [id])
  user          Users  @relation(fields: [id_user], references: [id])
}

model Users {
  id            Int            @id @default(autoincrement())
  email         String         @unique @db.VarChar
  password_hash String         @db.VarChar
  full_name     String         @db.VarChar
  nickname      String         @db.VarChar
  phone_number  String         @db.VarChar
  gender        String         @db.VarChar
  birth_date    DateTime       @db.Date
  profile_photo String         @db.VarChar
  token         String?        @db.VarChar
  addresses     Addresses[]
  orders        Orders[]
  testimonials  Testimonials[]
}

model Favorites {
 id   Int @id @default(autoincrement())
 id_product Int   
}
